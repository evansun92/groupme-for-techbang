  <%= link_to 'New group', new_group_path, class: 'btn btn-outline-info' %>

  <table class='table'>
    <thead>
      <tr>
        <td> # </td>
        <td>Title</td>
        <td>Description</td>
        <td>Action</td>
      </tr>
    </thead>

    <tbody id='groups'>
      <% @groups.each do |group| %>
      <tr>
        <td> <%= group.id %> </td>
        <td><%= link_to group.title, group_path(group) %></td>
        <td><%= group.description %></td>
        <td><%= link_to 'Edit', edit_group_path(group), class: 'btn btn-sm btn-outline-primary' %>
        <%= link_to 'Delete', group_path(group), class: 'btn btn-sm btn-outline-danger', method: 'delete', data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
